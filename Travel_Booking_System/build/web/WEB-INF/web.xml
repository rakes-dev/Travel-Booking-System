<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>SendMail</servlet-name>
        <servlet-class>.SendMail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>mainpack.RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sessionServe</servlet-name>
        <servlet-class>mainpack.sessionServe</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sessionLogOut</servlet-name>
        <servlet-class>mainpack.sessionLogOut</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserValidation</servlet-name>
        <servlet-class>mainpack.UserValidation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidateEmail</servlet-name>
        <servlet-class>mainpack.ValidateEmail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>contactUs</servlet-name>
        <servlet-class>mainpack.contactUs</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>adminLogin</servlet-name>
        <servlet-class>mainpack.adminLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>booking</servlet-name>
        <servlet-class>mainpack.booking</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>payment</servlet-name>
        <servlet-class>mainpack.payment</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SendMail</servlet-name>
        <url-pattern>/SendMail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/RegistrationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sessionServe</servlet-name>
        <url-pattern>/sessionServe</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sessionLogOut</servlet-name>
        <url-pattern>/sessionLogOut</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserValidation</servlet-name>
        <url-pattern>/UserValidation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidateEmail</servlet-name>
        <url-pattern>/ValidateEmail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>contactUs</servlet-name>
        <url-pattern>/contactUs</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>adminLogin</servlet-name>
        <url-pattern>/adminLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>booking</servlet-name>
        <url-pattern>/booking</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>payment</servlet-name>
        <url-pattern>/payment</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
